{
  "solve": {
    "prefix": ["solve"],
    "body": [
      "/**",
      " * @author ${VIM:\\$USER}",
      " * @created $CURRENT_MONTH_NAME_SHORT $CURRENT_DATE, $CURRENT_YEAR at $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND",
      " * @link $1",
      " */",
      "#include<stdio.h>",
      "#include<stdlib.h>",
      "#include<string.h>",
      "",
      "void solve($3) {",
      "\t${4://}",
      "}",
      "",
      "int main(void) {",
      "\t// ${2:dealing inputs}",
      "\tsolve($5);",
      "\treturn 0;",
      "}"
    ],
    "description": "common problem sovling skeleton for c"
  },
  "malloc error":{
    "prefix": ["mallocerr", "erralloc", "errmalloc"],
    "body":[
      "if (${1:str} == NULL) {",
      "\tfprintf(stderr, \"${2:malloc error}\\n\");",
      "\texit(1);",
      "}",
      "$0"
    ],
    "description": "memory allocation error"
  }
}
