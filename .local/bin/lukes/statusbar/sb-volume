#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
  1) setsid -f "$TERMINAL" -e pulsemixer ;;
  2) pulsemixer --toggle-mute ;;
  4) pulsemixer --change-volume +1 ;;
  5) pulsemixer --change-volume -1 ;;
  3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
  6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pulsemixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol=$(echo `pulsemixer --get-volume` | cut -d' ' -f2)

if [ "$vol" -gt "70" ]; then
  icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
  icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
  icon="ðŸ”ˆ"
else
  echo ðŸ”‡ && exit
fi

echo "$icon$vol"
